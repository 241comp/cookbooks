<% @cron_tasks.each do %>
<%= every "#{[:node][:cron][:frequency]}.#{[:node][:cron][:unit]}", :at => "'#{[:cron][:time][:hour]}:#{[:cron][:time][:minute]}" do
  node[:cron][:rake] if node[:cron][:rake]
  node[:cron][:runner] if node[:cron][:runner]
  node[:cron][:command] if node[:cron][:command]
end
%>